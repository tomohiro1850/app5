<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Message</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to(post.user) do %>
              <%= image_tag profile_url(post.user) %>
            <% end %>
        </td>
        <td><%= link_to post.title, post %></td>
        <td><%= post.body %></td>
        <td id="favorite-btn-<%= post.id %>"><%= render 'favorites/favorite', post: post %></td>
      </tr>
    <% end %>
  </tbody>
</table>